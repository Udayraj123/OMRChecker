{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "$id": "https://github.com/Udayraj123/OMRChecker/tree/master/src/schemas/evaluation-schema.json",
  "title": "Evaluation Schema",
  "description": "OMRChecker evaluation schema i.e. the marking scheme",
  "type": "object",
  "required": ["source_type", "options", "marking_scheme"],
  "properties": {
    "additionalProperties": false,
    "source_type": {
      "type": "string",
      "enum": ["csv", "custom"]
    },
    "options": {
      "type": "object",
      "additionalProperties": false,
      "properties": {
        "should_explain_scoring": { "type": "boolean" }
      }
    },
    "sections": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "array",
          "items": {
            "type": "string",
            "pattern": "^([^\\.]+)*?([^\\.\\d]+(\\d+)\\.{2,3}(\\d+))*?$"
          }
        }
      }
    },
    "marking_scheme": {
      "type": "object",
      "patternProperties": {
        ".*": {
          "type": "object",
          "properties": {
            "correct": {
              "oneOf": [
                { "type": "string" },
                { "type": "number", "minimum": 0 }
              ]
            },
            "incorrect": {
              "oneOf": [{ "type": "string" }, { "type": "number" }]
            },
            "unmarked": {
              "oneOf": [
                { "type": "string" },
                { "type": "number", "minimum": 0 }
              ]
            },
            "additionalProperties": false
          }
        }
      }
    }
  },
  "allOf": [
    {
      "if": {
        "properties": {
          "source_type": {
            "const": "csv"
          }
        }
      },
      "then": {
        "properties": {
          "options": {
            "type": "object",
            "required": ["answer_key_path"],
            "properties": {
              "answer_key_path": { "type": "string" }
            }
          }
        },
        "additionalProperties": true
      }
    },
    {
      "if": {
        "properties": {
          "source_type": {
            "const": "custom"
          }
        }
      },
      "then": {
        "properties": {
          "options": {
            "type": "object",
            "properties": {
              "answers": {
                "type": "array",
                "items": { "type": "string" }
              }
            }
          }
        }
      }
    }
  ]
}
